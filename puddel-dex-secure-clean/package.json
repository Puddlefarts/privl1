{
  "name": "puddel-dex-frontend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "security-check": "npm run lint && npm run compile && npm run test",
    "deploy:production": "node scripts/deploy-production-secure.js",
    "deploy:fuji": "hardhat run scripts/deploy-production-secure.js --network fuji",
    "deploy:mainnet": "hardhat run scripts/deploy-production-secure.js --network avalanche",
    "verify:all": "echo 'Verification completed during deployment'",
    "scan-secrets": "git log -p --all | grep -E '(BEGIN [A-Z]+ PRIVATE KEY|0x[a-fA-F0-9]{64}|[a-zA-Z0-9]{12} [a-zA-Z0-9]{12} [a-zA-Z0-9]{12}|sk_[a-zA-Z0-9]{48})' || echo 'No secrets detected'",
    "validate-deployment": "node scripts/validate-deployment.js",
    "gas-report": "REPORT_GAS=true hardhat test",
    "slither": "slither .",
    "mythril": "echo 'Run: python3 -m mythril analyze contracts/CONTRACT_NAME.sol --solv 0.8.19'",
    "audit": "npm run slither && npm run test:security",
    "test:unit": "hardhat test test/*.test.js",
    "test:integration": "hardhat test test/integration/*.js",
    "test:security": "hardhat test test/security/*.js",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:all": "npm run test && npm run test:coverage && npm run audit"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@rainbow-me/rainbowkit": "^2.2.0",
    "@tanstack/react-query": "^5.59.20",
    "@types/file-saver": "^2.0.7",
    "@types/three": "^0.179.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "ethers": "^5.7.2",
    "file-saver": "^2.0.5",
    "framer-motion": "^12.23.12",
    "jszip": "^3.10.1",
    "lucide-react": "^0.456.0",
    "next": "^15.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.6.0",
    "three": "^0.179.1",
    "three-gltf-exporter": "^0.0.1",
    "viem": "^2.21.50",
    "wagmi": "^2.12.34",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@ledgerhq/hw-app-eth": "^6.46.0",
    "@ledgerhq/hw-transport-node-hid": "^6.29.13",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@types/node": "^22.17.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.14.0",
    "eslint-config-next": "^15.0.3",
    "hardhat": "^2.26.1",
    "pino-pretty": "^13.0.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3"
  }
}
